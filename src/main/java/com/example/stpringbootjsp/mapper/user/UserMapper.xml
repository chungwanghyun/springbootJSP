<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.stpringbootjsp.mapper.user.UserMapper">
	<insert id="insertUser" parameterType="com.example.stpringbootjsp.model.user.User">
		insert into user (id, password)
		values (#{id,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR})
	</insert>

	<delete id="deleteUser" parameterType="com.example.stpringbootjsp.model.user.User">
		delete from user
	</delete>


	<update id="updateUser" parameterType="map">
    	update user
		set id = #{record.id,jdbcType=VARCHAR},
		password = #{record.password,jdbcType=VARCHAR}
	</update>

	<delete id="deleteUser" parameterType="com.example.stpringbootjsp.model.user.User">
		delete from user
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
	</delete>

	<sql id="Base_Column_List">
 		id, password
	</sql>

	<resultMap id="BaseResultMap" type="com.example.stpringbootjsp.model.user.User">
		<result column="id" jdbcType="VARCHAR" property="id" />
		<result column="password" jdbcType="VARCHAR" property="password" />
	</resultMap>

	<select id="selectUserList" parameterType="com.example.stpringbootjsp.model.user.User" resultMap="BaseResultMap">
		select
			<include refid="Base_Column_List" />
		from
			user
		where
			d_datetime is null
        <if test="usersSeq != null and usersSeq != ''">
            and users_seq = #{usersSeq,jdbcType=BIGINT}
        </if>
    </select>

	<select id="selectUserListCount" parameterType="com.example.stpringbootjsp.model.user.User" resultType="java.lang.Long">
		select count(*) from user
	</select>


</mapper>